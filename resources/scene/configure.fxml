<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #000012;"
          xmlns="http://javafx.com/javafx/8" fx:controller="com.chasehaddleton.smartalarmclock.ui.ConfigureController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Configure" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <font>
                <Font name="Michroma" size="21.0"/>
            </font>
        </Text>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="City: " GridPane.halignment="RIGHT"
              GridPane.rowIndex="2">
            <font>
                <Font name="Michroma" size="12.0"/>
            </font>
        </Text>
        <TextField fx:id="textCityName" promptText="City Name" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
                <Font name="Michroma" size="12.0"/>
            </font>
        </TextField>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Email: " GridPane.halignment="RIGHT"
              GridPane.rowIndex="3" GridPane.valignment="CENTER">
            <font>
                <Font name="Michroma" size="12.0"/>
            </font>
        </Text>
        <TextField fx:id="textEmail" promptText="Email Address" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   GridPane.valignment="CENTER">
            <font>
                <Font name="Michroma" size="12.0"/>
            </font>
        </TextField>
        <Button onAction="#submitAction" mnemonicParsing="false" text="Save" GridPane.columnIndex="1"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="5">
            <font>
                <Font name="Michroma" size="12.0"/>
            </font>
        </Button>
    </children>
</GridPane>
